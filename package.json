{
	"name": "ibm-i-acs-tools",
	"displayName": "IBM i ACS",
	"description": "Connect to IBM i ACS tools",
	"version": "0.0.5",
	"author": {
		"name": "Matt Tyler",
		"url": "https://github.com/m-tyler/"
	},
	"publisher": "m-tyler",
	"readme": "README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/m-tyler/vscode-ibm-i-acs-tools"
	},
	"homepage": "https://github.com/m-tyler/vscode-ibm-i-acs-tools/blob/master/README.md",

	"bugs": {
		"url": "https://github.com/m-tyler/vscode-ibm-i-acs-tools/issues"
	},
	"engines": {
		"vscode": "^1.71.0"
	},
	"keywords": [
		"SQL",
		"IBM i",
		"IBMI",
		"AS/400",
		"AS400",
		"Db2",
		"Db2 for i",
		"Db2 for IBM i",
		"ISERIES"
	],
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"title": "IBM i ACS tools",
			"properties": {
				"ibm-i-acs.host": {
					"type": "string",
					"default": "",
					"description": "Name of IBM i (Or list of names separated by , Or blank if you prefer to login each time)"
				},
				"ibm-i-acs.user": {
					"type": "string",
					"default": "",
					"description": "Name of the IBM i user account ID to use to make the connection"
				},
				"ibm-i-acs.database": {
					"type": "string",
					"default": "",
					"description": "Name of the DB to connect to (Or list of names separated by comma (,). Needed if you use IASPs.  "
				},
				"ibm-i-acs.schema": {
					"type": "string",
					"default": "",
					"description": "Db2 schema name on your IBM i"
				},
				"ibm-i-acs.acsbinary": {
					"type": "string",
					"default": "",
					"description": "Absolute path and name for the IBM i Access Client Solution (ACS) executable. Specify the jar bundle or the Windows binary .EXE start up program"
				}
			}
		},
		"commands": [
			{
				"command": "acstools.ibmiRunSqlFromAcs",
				"category": "IBM i ACS",
				"title": "ACS Run SQL Scripts"
			},
			{
				"command": "acstools.ibmiRunDebuggerInAcs",
				"category": "IBM i ACS",
				"title": "ACS System GUI Debugger"
			},
			{
				"command": "acstools.ibmiRunDb2toolsInAcs",
				"category": "IBM i ACS",
				"title": "ACS DB2 Performance Tools"
			}
		],
		"submenus": [
			{
				"id": "acstools.ToolsSubmenu",
				"label": "ACS Tools",
				"icon": "$(debug)"
			}
		],
		"menus": {
			"commandPalette": [
			],
			"explorer/context": [
				{
					"when": "resourceLangId == sql",
					"command": "acstools.ibmiRunSqlFromAcs",
					"group": "navigation"
				},
				{
					"command": "acstools.ibmiRunDebuggerInAcs",
					"group": "navigation"
				},
				{
					"command": "acstools.ibmiRunDb2toolsInAcs",
					"group": "navigation"
				}
			],
			"acstools.ToolsSubmenu": [
				{
					"command": "acstools.ibmiRunDebuggerInAcs"
				},
				{
					"command": "acstools.ibmiRunDb2toolsInAcs"
				}
			],
			"editor/title": [
				{
					"submenu": "acstools.ToolsSubmenu",
					"group": "navigation"
				}
			],
			"editor/title/context": [
				{
					"when": "resourceLangId == sql",
					"command": "acstools.ibmiRunSqlFromAcs",
					"group": "navigation"
				},
				{
					"command": "acstools.ibmiRunDebuggerInAcs",
					"group": "navigation"
				},
				{
					"command": "acstools.ibmiRunDb2toolsInAcs",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"package": "vsce package",
		"compile": "tsc -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^16.x",
		"@types/vscode": "^1.71.0",
		"tslint": "^5.16.0",
		"typescript": "^4.8.2"
	}
}